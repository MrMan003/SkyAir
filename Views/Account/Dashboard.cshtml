@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        background-image: url('https://wallpapercat.com/w/full/2/2/9/177444-3840x2160-desktop-4k-clouds-background-image.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        background-attachment: fixed;
        font-family: 'Segoe UI', sans-serif;
    }
    .dashboard-card {
        border-radius: 16px;
        padding: 25px;
        background: #ffffff;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
    }

    .form-label {
        font-weight: 600;
        font-size: 0.85rem;
        color: #555;
    }

    .form-section {
        border-radius: 12px;
        background-color: #f0f6ff;
        padding: 25px;
    }

    .btn-search {
        background-color: #bfc0c0;
        color: #000;
        font-weight: 600;
        border-radius: 30px;
        transition: background-color 0.3s ease;
    }

    .btn-search:hover {
        background-color: #0047ab;
        color: white;
    }

    .trip-type input {
        margin-right: 6px;
    }

    .form-select,
    .form-control {
        border-radius: 12px;
    }

    .title-bar {
        font-size: 1.2rem;
        font-weight: 600;
        color: #000;
    }

    .badge-offer {
        background-color: #0047ab;
        color: white;
        border-radius: 20px;
        padding: 6px 12px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .link-style {
        color: #1a0dab;
        text-decoration: underline;
        font-weight: 600;
    }
</style>

<div class="container mt-4">
    <div class="dashboard-card">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="title-bar"><i class="bi bi-airplane-engines"></i> Book a flight</div>
        </div>

        <div class="form-section">
            <form asp-controller="Flight" asp-action="Search" method="get">
                <div class="d-flex mb-3 gap-3 trip-type">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="tripType" checked>
                        <label class="form-check-label">One Way</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="tripType">
                        <label class="form-check-label">Round Trip</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="tripType">
                        <label class="form-check-label">Multi City</label>
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">From</label>
                        <input type="text" name="fromAirport" class="form-control" placeholder="e.g. Delhi, DEL" required />
                        <small class="text-muted">Enter Departure Airport</small>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">To</label>
                        <input type="text" name="toAirport" class="form-control" placeholder="e.g. Mumbai, BOM" required />
                        <small class="text-muted">Enter Destination Airport</small>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Departure</label>
                        <input type="date" name="date" class="form-control" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Return</label>
                        <input type="date" name="returnDate" class="form-control" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Travellers</label>
                        <select class="form-select">
                            <option>1 Passenger</option>
                            <option>2 Passengers</option>
                            <option>3 Passengers</option>
                        </select>
                    </div>
                </div>

                <div class="row g-3 mt-3">
                    <div class="col-md-4">
                        <label class="form-label">I am travelling for</label>
                        <select class="form-select">
                            <option>Business</option>
                            <option>Leisure</option>
                            <option>Emergency</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Pay with</label>
                        <select class="form-select">
                            <option>Cash</option>
                            <option>Card</option>
                            <option>Points</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Promo Code</label>
                        <input type="text" class="form-control" placeholder="ADD PROMOCODE" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-search w-100">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
