@model IEnumerable<Hello.Models.Flight>
@{
    ViewData["Title"] = "Search Results";
}

<h2>Available Flights</h2>

@if (!Model.Any())
{
    <p>No flights found for the selected route.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Flight Number</th>
                <th>From</th>
                <th>To</th>
                <th>Departure</th>
                <th>Arrival</th>
                <th>Date</th>
                <th>Return</th>
                <th>Class</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td>@flight.FlightNumber</td>
                    <td>@flight.FromAirport</td>
                    <td>@flight.ToAirport</td>
                    <td>@flight.DepartureTime</td>
                    <td>@flight.ArrivalTime</td>
                    <td>@flight.Date</td>
                    <td>@flight.ReturnDate</td>
                    <td>@flight.Class</td>
                </tr>
            }
        </tbody>
    </table>
}
