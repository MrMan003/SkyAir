@model IEnumerable<Hello.Models.Flight>

<h2>Available Flights</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Flight Number</th>
                <th>From</th>
                <th>To</th>
                <th>Departure Time</th>
                <th>Arrival Time</th>
                <th>Date</th>
                <th>Return Date</th>
                <th>Class</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td>@flight.FlightNumber</td>
                    <td>@flight.FromAirport</td>
                    <td>@flight.ToAirport</td>
                    <td>@flight.DepartureTime</td>
                    <td>@flight.ArrivalTime</td>
                    <td>@flight.Date.ToString("yyyy-MM-dd")</td>
                    <td>@(flight.ReturnDate.HasValue ? flight.ReturnDate.Value.ToString("yyyy-MM-dd") : "-")</td>
                    <td>@flight.Class</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No flights found matching your search criteria.</p>
}
